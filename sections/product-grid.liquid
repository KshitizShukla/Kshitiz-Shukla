    "name":"Product Grid",
    "settings": [
        { "type": "text", "id": "section_title", "label": "Section Title", "default": "Tisso vision in the wild" },
        { "type": "image_picker", "id": "product_image_00", "label": "Product 00" },
        { "type": "image_picker", "id": "product_image_01", "label": "Product 01" },
        { "type": "image_picker", "id": "product_image_02", "label": "Product 02" },
        { "type": "image_picker", "id": "product_image_03", "label": "Product 03" },
        { "type": "image_picker", "id": "product_image_04", "label": "Product 04" },
        { "type": "image_picker", "id": "product_image_05", "label": "Product 05" }
    ],
    "presets":[
        {"name":"Product Grid"}
    ]
}{% endschema%}