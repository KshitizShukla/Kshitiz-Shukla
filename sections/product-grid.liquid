                </div>
            </div>
            <div class="product-card fade-in" onclick="openModal(2)">
                <div class="product-image">
                    {% if section.settings.product_image_02 %}
                        <img src="{{ section.settings.product_image_02 | img_url:'2000x'}}" alt="Casual Street Style">
                    {% endif %}
                    <div class="product-plus-icon">+</div>
                </div>
            </div>
            <div class="product-card fade-in" onclick="openModal(3)">
                <div class="product-image">
                    {% if section.settings.product_image_03 %}
                        <img src="{{ section.settings.product_image_03 | img_url:'2000x'}}" alt="Leather Jacket">
                    {% endif %}
