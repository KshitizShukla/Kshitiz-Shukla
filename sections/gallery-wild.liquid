<section class="gallery-wild">
  <h2>{{ section.settings.heading }}</h2>
  <div class="gallery-grid">
    {% for block in section.blocks %}
      <div class="gallery-item">
        {% if block.settings.image != blank %}
          <img src="{{ block.settings.image | img_url: '600x' }}" alt="Gallery image">
        {% endif %}
      </div>
    {% endfor %}
  </div>
</section>

<style>
.gallery-wild {
  padding: 60px 20px;
  text-align: center;
}
.gallery-wild h2 {
  font-size: 28px;
  margin-bottom: 40px;
}
.gallery-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 20px;
}
.gallery-item img {
  width: 100%;
  height: auto;
  display: block;
}
</style>

{% schema %}
{
  "name": "Gallery Wild",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Tisso vison in the wild"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Gallery Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Gallery Wild",
      "blocks": [
        { "type": "image" },
        { "type": "image" },
        { "type": "image" }
      ]
    }
  ]
}
{% endschema %}
