<section class="hero-section">
  <div class="hero-content">
    <div class="hero-mainimage">
      {% if section.settings.background_image != blank %}
        <img src="{{ section.settings.background_image | image_url: width: 2000 }}" alt="Gift Guide Hero" class="hero-main-image">
      {% endif %}
    </div>
  </div>
</section>

<style>
main > .shopify-section:has(> .hero-section) { margin-top: 0 !important; }
main > .shopify-section:has(> .hero-section) .spacing-style { --section-top-offset: 0px; }

/* Hero styles */
.hero-section{background:#fff;position:relative;overflow:hidden;min-height:60vh}
.hero-content{display:flex;align-items:center;min-height:60vh;width:100%}
.hero-main-image{width:100%;height:100%;display:block;object-fit:cover}

@media (max-width: 786px){ .hero-mainimage{display:none} }
</style>

{% schema %}
{
  "name": "Gift Guide Hero",
  "settings": [
    { "type": "image_picker", "id": "background_image", "label": "Background Illustration" }
  ],
  "presets": [{ "name": "Gift Guide Hero" }]
}
{% endschema %}
