<section class="hero-section">
  <div class="hero-content">
    <div class="hero-mainimage">
      {% if section.settings.background_image != blank %}
        <img src="{{ section.settings.background_image | img_url: '2000x' }}" alt="Gift Guide Hero" class="hero-main-image">
      {% endif %}
    </div>
  </div>
</section>

<style>
  @media (max-width: 768px) {
    .hero-mainimage{
        display: none;
    }
    .hero-image {
        order: 1;
        height: auto;
        min-height: auto;
    }
    .hero-content {
        flex-direction: column-reverse;
        min-height: auto;
    }
    .header-content {
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        gap: 0;
    }
}
.hero-section {
    background-color: #fff;
    position: relative;
    overflow: hidden;
    min-height: 60vh;
  }
.hero-content {
    display: flex;
    align-items: center;
    min-height: 60vh;
    width: 100%;
}
.hero-image {
    flex: 1;
    position: relative;
    height: 60vh;
    min-height: 500px;
}

.hero-main-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

{% schema %}
{
  "name": "Gift Guide Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Illustration"
    }
  ],
  "presets": [
    { "name": "Gift Guide Hero" }
  ]
}
{% endschema %}
