<section class="hero-section">
  <div class="hero-content">
    <div class="hero-mainimage">
      {% if section.settings.background_image != blank %}
        <img src="{{ section.settings.background_image | img_url: '2000x' }}" alt="Gift Guide Hero" class="hero-main-image">
      {% endif %}
    </div>
  </div>
</section>

<style>
 /* hero-image-top.css */
.hero-section{
  background:#fff;
  position:relative;
  overflow:hidden;
  min-height:60vh;
}
.hero-section--top .hero-content{display:flex;align-items:center;min-height:60vh;width:100%}
.hero-mainimage .hero-main-image{width:100%;height:100%;object-fit:cover;display:block}
@media(max-width:768px){.hero-mainimage{display:none}}
</style>

{% schema %}
{
  "name": "Gift Guide Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Illustration"
    }
  ],
  "presets": [
    { "name": "Gift Guide Hero" }
  ]
}
{% endschema %}
