<!-- SECTION 2: HERO (TOP IMAGE + TEXT + SIDE IMAGE) -->
<section class="hero-section">
  <div class="hero-content">
    <div class="hero-mainimage">
      {% if section.settings.main_image %}
        <img src="{{ section.settings.main_image | img_url: '2000x' }}" alt="Gift Guide Hero" class="hero-main-image">
      {% endif %}
    </div>
  </div>

  <div class="hero-content hero-bottom-content">
    <div class="hero-text">
      <h1 class="hero-title">{{ section.settings.title }}</h1>
      <p class="hero-description">{{ section.settings.description }}</p>
      <a href="#products" class="shop-button hide-mb" id="shopBtn">
        {{ section.settings.button_text_shopnow }}
        <i class="fas fa-arrow-right"></i>
      </a>
    </div>
    <div class="hero-image">
      {% if section.settings.side_image %}
        <img src="{{ section.settings.side_image | img_url: '2000x' }}" alt="Gift Guide Hero" class="hero-main-image hide-mb">
      {% endif %}
        <a href="{{ section.settings.button_link }}" 
         class="shop-button" id="shopBtn">
         {{ section.settings.button_text_shopnow }}
         <i class="fas fa-arrow-right"></i> 
        </a>
    </div>
  </div>

  <div class="hero-bottom-content">
    <p class="hero-bottom-text">{{ section.settings.bottom_text }}</p>
  </div>
</section>

<style>
/* ================= HERO SECTION ================= */
.hero-section{
  background:#fff;
  position:relative;
  overflow:hidden;
  min-height:60vh;
  font-family:'Jost';
}

/* Content layout */
.hero-content{
  display:flex;
  align-items:center;
  width:100%;
}

.hero-bottom-text{
  background:#f5f5f5;
  padding:10px 0;
  text-align:center;
  letter-spacing:1pt;
  color:#000;
}

/* ================= TEXT BLOCK ================= */
.hero-bottom-content .hero-text{
  flex:1;
  padding:60px 40px;
  z-index:2;
  max-width:40%;
  padding-left:10%;
}

.hero-title{
  font-size:48px;
  font-weight:bold;
  color:#000;
  margin-bottom:20px;
  line-height:1.2;
}

.hero-bottom-content .hero-description{
  font-size:16px;
  color:#000;
  margin-bottom:30px;
  max-width:400px;
  letter-spacing:0;
}

/* ================= BUTTON ================= */
.shop-button{
  background:#000;
  color:#fff;
  padding:15px 30px;
  text-decoration:none;
  font-weight:bold;
  text-transform:uppercase;
  transition:.3s;
  display:inline-block!important;
}
.shop-button:hover{ background:#555; }
.shop-button i{ margin-left:8px; }

/* ================= IMAGE ================= */
.hero-bottom-content .hero-image{
  flex:1;
  position:relative;
  max-width:60%;
  width:100%;
}
.hero-main-image{
  width:100%;
  height:100%;
  object-fit:contain;
}

/* ================= RESPONSIVE ================= */

/* ---- Mobile ---- */
@media (max-width:768px){
  /* Hide top big image */
  .hero-mainimage { display:none !important; }

  /* Stack text + button + side image */
  .hero-bottom-content{
    display:flex;
    flex-direction:column;
    align-items:center;
    justify-content:center;
    text-align:center;
    padding:30px 20px;
  }

  .hero-bottom-content .hero-text{
    order:1;
    padding:0;
    max-width:100%;
  }

  .hero-title{
    font-size:28px;
    margin-bottom:10px;
  }

  .hero-bottom-content .hero-description{
    font-size:14px;
    margin-bottom:15px;
    white-space:nowrap;
    overflow:hidden;
    text-overflow:ellipsis;
  }

  .hide-dk{display:inline-block!important; margin:10px auto;}
  .hide-mb{display:none!important;}

  /* âœ… Force side image to show */
  .hero-bottom-content .hero-image{
    order:2;
    display:block !important;
    width:100%;
    margin-top:15px;
  }

  .hero-bottom-content .hero-image img{
    display:block !important;
    width:100%;
    max-height:200px;
    height:auto;
    object-fit:contain;
    margin:0 auto;
  }
}

/* ---- Small phones ---- */
@media (max-width:480px){
  .hero-title{font-size:24px;}
  .hero-bottom-content .hero-text{padding:20px 10px;}
}

/* ---- Tablet ---- */
@media (max-width:1024px) and (min-width:769px){
  .hero-bottom-content .hero-text{
    padding:20px 40px;
    max-width:50%;
  }
  .hero-title{font-size:42px;}
}

</style>

<script>
/* optional smooth scroll if linking to #products somewhere */
document.addEventListener('DOMContentLoaded',()=>{
  document.querySelectorAll('a.shop-button[href="#products"]').forEach(btn=>{
    btn.addEventListener('click',e=>{
      e.preventDefault();
      document.getElementById('products')?.scrollIntoView({behavior:'smooth'});
    });
  });
});
</script>

{% schema %}
{
  "name": "Gift Guide Hero",
  "settings": [
    { "type": "image_picker", "id": "main_image", "label": "Main Hero Image" },
    { "type": "text", "id": "title", "label": "Heading", "default": "The Gift Guide" },
    { "type": "textarea", "id": "description", "label": "Description", "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season." },
    { "type": "text", "id": "button_text_shopnow", "label": "Button Text", "default": "SHOP NOW" },
    { "type": "url", "id": "button_link", "label": "Button Link", "default": "/collections/all" },
    { "type": "image_picker", "id": "side_image", "label": "Hero Side Image" },
    { "type": "text", "id": "bottom_text", "label": "Bottom text strip", "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL" }
  ],
  "presets": [
    { "name": "Gift Guide Hero" }
  ]
}
{% endschema %}
