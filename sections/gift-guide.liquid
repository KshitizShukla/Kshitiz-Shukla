<section id="gift-hero-{{ section.id }}" class="gift-guide-hero"
  {% if section.settings.background_image != blank %}
  style="background-image:url('{{ section.settings.background_image | image_url: width: 2000 }}');"
  {% endif %}>
  <div class="gift-guide-content">
    <h2>{{ section.settings.title }}</h2>
    <p>{{ section.settings.subtitle }}</p>
    <a href="{{ section.settings.button_link }}" class="gift-guide-btn">
      {{ section.settings.button_text }}
    </a>
    <p class="note-text">SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL</p>
  </div>
</section>

<style>
#gift-hero-{{ section.id }}{
  position:relative; overflow:hidden;
  min-height:520px; padding:48px 56px 72px;
  background-repeat:no-repeat;
  background-size:1440px 390px;
  background-position:center 64px;
}
#gift-hero-{{ section.id }} .gift-guide-content{
  max-width:560px; background:rgba(255,255,255,.95);
  padding:24px 28px; border-radius:12px; backdrop-filter:blur(2px);
}
#gift-hero-{{ section.id }} h2{margin:0 0 8px;font-weight:700;font-size:clamp(28px,3.2vw,48px)}
#gift-hero-{{ section.id }} p{margin:0 0 18px;line-height:1.6}
#gift-hero-{{ section.id }} .gift-guide-btn{
  display:inline-block;background:#000;color:#fff;padding:12px 22px;
  text-decoration:none;border-radius:6px;font-weight:700
}
#gift-hero-{{ section.id }} .note-text{
  font-size:12px;margin-top:16px;color:#444;letter-spacing:.06em;text-transform:uppercase
}
/* Responsive tweaks */
@media (max-width:990px){
  #gift-hero-{{ section.id }}{min-height:420px;padding:32px 24px 48px;background-size:1100px 298px;background-position:center 32px}
}
@media (max-width:640px){
  #gift-hero-{{ section.id }}{min-height:360px;padding:20px 16px 36px;background-size:900px auto;background-position:center 24px}
  #gift-hero-{{ section.id }} .gift-guide-content{max-width:100%;padding:16px}
}
</style>

{% schema %}
{
  "name": "Gift Guide Hero",
  "settings": [
    { "type": "image_picker", "id": "background_image", "label": "Background Illustration" },
    { "type": "text", "id": "title", "label": "Heading", "default": "The Gift Guide" },
    { "type": "textarea", "id": "subtitle", "label": "Subtitle", "default": "Discover joy: Your ultimate holiday gift destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season." },
    { "type": "text", "id": "button_text", "label": "Button Text", "default": "Shop Now" },
    { "type": "url", "id": "button_link", "label": "Button Link" }
  ],
  "presets": [{ "name": "Gift Guide Hero" }]
}
{% endschema %}
