<section class="gift-guide-hero">
  {% if section.settings.background_image != blank %}
    <img src="{{ section.settings.background_image | img_url: '2000x' }}" 
         alt="Gift Guide Background" 
         class="gift-guide-bg">
  {% endif %}

  <div class="gift-guide-content">
    <h2>{{ section.settings.title }}</h2>
    <p>{{ section.settings.subtitle }}</p>
    <a href="{{ section.settings.button_link }}" class="gift-guide-btn">
      {{ section.settings.button_text }}
    </a>
    <p class="note-text">SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL</p>
  </div>
</section>

<style>
.gift-guide-hero {
  position: relative;
  text-align: left;
  overflow: hidden;
}
.gift-guide-bg {
  width: 100%;
  height: auto;
  display: block;
}
.gift-guide-content {
  position: absolute;
  top: 20%;
  left: 10%;
  max-width: 500px;
  background: rgba(255,255,255,0.85);
  padding: 20px;
}
.gift-guide-content h2 {
  font-size: 42px;
  font-weight: bold;
  margin-bottom: 10px;
}
.gift-guide-content p {
  font-size: 16px;
  margin-bottom: 20px;
}
.gift-guide-btn {
  display: inline-block;
  background: black;
  color: white;
  padding: 12px 24px;
  text-decoration: none;
  font-weight: bold;
  border-radius: 4px;
}
.gift-guide-btn:hover {
  background: #333;
}
.note-text {
  font-size: 12px;
  margin-top: 15px;
  color: #555;
}
</style>

{% schema %}
{
  "name": "Gift Guide Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Illustration"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Discover joy: Your ultimate holiday gift destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Gift Guide Hero"
    }
  ]
}
{% endschema %}
