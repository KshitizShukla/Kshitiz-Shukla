<section class="hero-section">
    <div class="hero-content">
        <div class="hero-text">
            <h1 class="hero-title">
                {{section.settings.title}}
            </h1>
            <p class="hero-description">
                {{section.settings.description}}
            </p>
            <a href="{{ section.settings.button_link }}" class="shop-button" id="shopBtn">
                {{ section.settings.button_text_shopnow }}
            </a>
        </div>
        <div class="hero-image">
            {% if section.settings.side_image %}
                <img src="{{ section.settings.side_image | img_url:'2000x' }}" alt="Gift Guide Hero" class="hero-main-image">
            {% endif %}
        </div>
    </div>
    <div class="hero-bottom-content">
        <p class="hero-bottom-text">
            SUSTAINABLE ETHICALY MADE CLOTHES IN SIZES XXS TO 6XL
        </p>
    </div>
</section>

<style>
    .hero-text{
        flex:1;
        padding:60px 40px;
        z-index:2;
        max-width:600px;    
    }
    .hero-title{
        font-size:48px;
        font-weight:500;
        color:#000000;
        margin-bottom:20px;
        line-height:100%;
    }
    .hero-description{
        font-size:20px;
        color: #000000;
        margin-bottom:20px;
        max-width:400px;
        font-weight:400
    }
    .shop-button{
        background: #000000;
        color:#ffffff;
        padding:15px 30px;
        text-decoration:none;
        font-weight:400;
        text-transform:uppercase;
        transition: .3s;
        display:inline-flex;
        align-items:center;
        gap:10px
    }
    .shop-button:hover{
        background:#555;
    }
    .shop-button:after{
        content:"->";
        font-size:16px;
    }
    .hero-image{
        flex:1;
        position:relative;
        height:60vh;
        min-height:500px
    }
    .hero-main-image{
        width:100%;
        height:100%;
        object-fit:cover;
    }
    .hero-bottom-text{
        background: #F5F5F5;
        padding:10px 0;
        text-align:center;
        letter-spacing:1pt
    }
    @media(max-width:786px){
        .hero-content:{flex-direction:column-reverse;min-height:auto}
        .hero-text:{text-align:center;padding:40px 20px;max-width:100%}
        .hero-image:{order:1;height:auto;min-height:auto}
        .hero-title:{font-size:36px}
        .hero-description:{max-width:100%}
    }
    @media(max-width:480px){
        .hero-title{font-size:28px}
        .hero-text{padding:30px 15px}
    }
    @media(max-width:1024px) and (min-width:769px){
        .hero-title{font-size:42px}
    }
</style>

<script>
    document.getElementById('shopBtn').addEventListener('click',e=>{e.preventDefault();
    document.getElementById('products').scrollIntoView({behaviour:'smooth'});
    });
</script>

{% schema %}{
    "name":"Gift Hero",
    "settings":[
        {"type":"text","id":"title","label":"Heading","default":"The Gift Guide"},
        {"type":"textarea","id":"description","label":"Description","default":"Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gift to delight you loved ones this holiday season"},
        {"type":"text","id":"button_text_shopnow","label":"Button Text","default":"Shop Now"},
        {"type":"url","id":"button_link","label":"Button Link","default":"/collections/all"},
        {"type":"image_picker","id":"side_image","label":"Hero Side Image"},
        {"type":"text","id":"button_text","label":"Bottom Strip Text","default":"SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"}
    ],
    "presets":[{"name":"Gift Hero Text"}]
}{% endschema %}
